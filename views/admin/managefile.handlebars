<form action="/adm/managefile/view" method="get">
    <button type="submit">Ver arquivos existentes</button>

    <table>
        <thead>
            <tr>
                <th scope="col">Titulo</th>
                <th scope="col">Matéria</th>
                <th scope="col">Data de upload</th>
            </tr>
        </thead>
        <tbody>
            {{#if findResult}}
                {{#each findResult}}
                    <tr>
                        <td>{{'titulo'}}</td>
                        <td>{{'nome'}}</td>
                        <td>{{'criado_em'}}</td>
                        
                    </tr>
                {{/each}}
            {{/if}}
        </tbody>
            
        
        
    </table>

</form>

