<link rel="stylesheet" href="../dash.css">

<body class="sb-nav-fixed">
    {{> navbar}}

    <div id="layoutSidenav">
        {{> dashsidebar}}

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    {{!-- Conteúdo da página abaixo --}}
                    {{> triggerButtonPopup 
                        bootstrapClassBtn="btn-success"
                        icon="fa-solid fa-plus"
                        title="Novo"
                        target="novaMateria"
                    }}

                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            <span>Matérias</span>
                        </div>
                        <div class="card-body">
                            <form>
                                <table id="datatablesSimple" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nome</th>
                                            <th>Termo</th>
                                            <th>Chapa do Professor</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#if findResult}}
                                        {{#each findResult}}
                                        <tr>
                                            <td>{{'id'}}</td>
                                            <td>{{'nome'}}</td>
                                            <td>{{'termo'}}°</td>
                                            <td>{{'fk_professor'}}</td>
                                            <td class="del-btn">
                                                <button type="submit" formmethod="post" formaction="/adm/.../delete/{{'id'}}"><i class="fas fa-trash"></i></button>
                                            </td>
                                        </tr>
                                        {{/each}}
                                        {{/if}}
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                    {{!-- <form action="/adm/managefile/create" method="post" enctype="multipart/form-data">
                        <input type="file" name="file" id="file">
                        <br>
                        <button type="submit">Adicionar</button>

                    </form> --}}

                </div>
                <!-- Pop-up -->
                <div id="novaMateria" class="modal">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <p> Nova Matéria </p>
                            </div>
                            <form>
                                <div class="modal-body">
                                    <input type="text" class="form-control" name="materyName" id="materyName"
                                        placeholder="Nome"><br>
                                    <input list="terms" class="form-control" name="materyTerm" id="materyTerm"
                                        placeholder="Termo"><br>
                                    <input list="profs" class="form-control" name="materyProf" id="materyProf"
                                        placeholder="Professor"><br>

                                    <datalist id="terms">
                                        <option value="1"></option>
                                        <option value="2"></option>
                                        <option value="3"></option>
                                        <option value="4"></option>
                                        <option value="5"></option>
                                        <option value="6"></option>
                                        <option value="7"></option>
                                        <option value="8"></option>
                                    </datalist>

                                    <datalist id="profs">
                                        {{#each professors}}
                                            <option value={{'nome'}}></option>
                                        {{/each}}
                                    </datalist>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary"
                                        data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-success" formmethod="post"
                                        formaction="/adm/matery/create">Criar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </main>
            {{> dashfooter}}
        </div>
    </div>

    <script src="../dashsidebar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="js/datatables-simple-demo.js"></script>
</body>
